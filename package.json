{
  "name": "latexify",
  "description": "LaTeXify your TextField and back.",
  "version": "0.2.0",
  "engines": {
    "sketch": ">=49.0"
  },
  "skpm": {
    "name": "latexify",
    "manifest": "src/manifest.json",
    "main": "latexify.sketchplugin",
    "assets": [
      "sketch-assets/icons.sketch",
      "sketch-assets/template.tex"
    ]
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.7.0"
  },
  "author": "Jean-Baptiste Cordonnier <jbcdnr@gmail.com>",
  "dependencies": {
    "@skpm/child_process": "^0.4.0",
    "@skpm/fs": "^0.2.4",
    "@skpm/os": "^0.1.1",
    "@skpm/process": "^0.1.1",
    "mustache": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbcdnr/sketch-latexify-plugin.git"
  }
}
